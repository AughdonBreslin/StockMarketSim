<main>
    <nav>
        <a href='/'>Home</a>
        <a href='/positions'>Positions</a>
        <a href='/trade'>Trade</a>
        <a href='/activity'>Activity</a>
    </nav>
  <p>Displaying your recent stock purchases/sells:</p>
  {{!-- List of transactions is displayed here --}}

  {{#if transactions}}
    <ul class="transactions_list">
      {{#each transactions}}
          <a>
            <p>
              On {{this.date}}, you {{action this.type}} {{this.quantity}} {{plural this.quantity "share" "shares"}} of {{this.ticker}} for ${{this.amount}} each, for a total transaction amount of ${{multiply this.amount this.quantity}}.
            </p>
          </a>
          
          
          {{!-- <li> 
            <a>
              Date: {{this.date}}
              <br>
              Type: {{this.type}}
              <br>
              Ticker: {{this.ticker}}
              <br>
              Transaction Amount: ${{this.amount}}
              <br>
              Total Transaction Amount: ${{this.amount * this.quantity}}
              <br>
            </a>
          </li> --}}
          {{!-- <br> --}}
      {{/each}}
    </ul>
  {{else}}
    <p class="noTransactions"> 
      &emsp;You haven't made any transactions yet. Go to the 'Trade' tab to make a transaction!
    </p>
  {{/if}}
</main>